// Place your key bindings in this file to override the defaults
[
    {
      "key": "ctrl+left",
      "command": "cursorWordPartLeft",
      "when": "textInputFocus"
    },
    {
      "key": "ctrl+alt+left",
      "command": "-cursorWordPartLeft",
      "when": "textInputFocus"
    },
    {
      "key": "ctrl+shift+left",
      "command": "cursorWordPartLeftSelect",
      "when": "textInputFocus"
    },
    {
      "key": "ctrl+right",
      "command": "cursorWordPartRight",
      "when": "textInputFocus"
    },
    {
      "key": "ctrl+alt+right",
      "command": "-cursorWordPartRight",
      "when": "textInputFocus"
    },
    {
      "key": "ctrl+shift+right",
      "command": "cursorWordPartRightSelect",
      "when": "textInputFocus"
    }
  ]
